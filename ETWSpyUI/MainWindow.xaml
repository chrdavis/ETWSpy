<Window x:Class="ETWSpyUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ETWSpyUI"
        mc:Ignorable="d"
        Style="{StaticResource ThemedWindow}"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        Title="ETWSpy - Event Tracing Monitor" 
        Height="600" 
        Width="1000"
        MinHeight="400"
        MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <TabControl Grid.Row="0" Margin="10">
            <TabItem Header="Filters">
                <Grid Background="{DynamicResource SecondaryBackgroundBrush}" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- form -->
                    <Grid Grid.Row="0" Background="{DynamicResource SecondaryBackgroundBrush}" Margin="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Provider:" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2"/>
                        <ComboBox Grid.Row="0"
                                  Grid.Column="1"
                                  x:Name="ProviderComboBox"
                                  Margin="2"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Width="400"
                                  IsEditable="True"
                                  IsReadOnly="False"
                                  IsTextSearchEnabled="True"/>
                        <Label Grid.Row="0" Grid.Column="2" Content="(Name or GUID, select or enter new provider)" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Event:" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="EventTextBox" Height="26" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="400"/>
                        <Label Grid.Row="1" Grid.Column="2" Content="(Separate IDs with ','; Specify range with '-'; Empty = All" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2"/>

                        <Label Grid.Row="2" Grid.Column="0" Content="Match Text:" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="TextToMatchBox" Height="26" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400"/>
                        <Label Grid.Row="2" Grid.Column="2" Content="(Case-insensitive sub-string match in event/task name)" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2"/>

                        <Label Grid.Row="3" Grid.Column="0" Content="Filter Type:" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="FilterTypeComboBox" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150"/>

                        <Label Grid.Row="4" Grid.Column="0" Content="Keywords:" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2"/>
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="KeywordsTextBox" Text="" Height="26" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150"/>

                        <Label Grid.Row="5" Grid.Column="0" Content="Trace Level:" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2"/>
                        <ComboBox Grid.Row="5"
                            Grid.Column="1"
                            x:Name="TraceLevelComboBox"
                            Margin="2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Width="150"
                            IsEditable="True"
                            IsReadOnly="False"
                            IsTextSearchEnabled="True"/>
                        
                        <Label Grid.Row="6" Grid.Column="0" Content="Trace Flags:" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2"/>
                        <TextBox Grid.Row="6" Grid.Column="1" x:Name="TraceFlagsTextBox" Height="26" Margin="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150"/>
                    </Grid>

                    <!-- buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,10">
                        <Button Content="Add" x:Name="AddFilterButton" Click="AddFilter" Margin="5,0" MinWidth="100"/>
                        <Button Content="Remove" x:Name="RemoveFilterButton" Click="RemoveFilter" Margin="5,0" MinWidth="100"/>
                        <Button Content="Clear" x:Name="ClearFiltersButton" Click="ClearFilters" Margin="5,0" MinWidth="100"/>
                        <Button Content="Save..." x:Name="SaveButton" Click="SaveToFile" Margin="5,0" MinWidth="100"/>
                        <Button Content="Load..." x:Name="LoadButton" Click="LoadFromFile" Margin="5,0" MinWidth="100"/>
                    </StackPanel>

                    <!-- list (fills remaining space) -->
                    <ListView Grid.Row="2"
                              x:Name="FiltersListView"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"
                              Margin="0"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    <ListView.View>
                            <GridView AllowsColumnReorder="True">
                                <GridViewColumn Header="Provider" Width="300" DisplayMemberBinding="{Binding Provider}"/>
                                <GridViewColumn Header="Event Id" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding EventId}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding EventId}" Value="">
                                                                <Setter Property="Text" Value="(All)"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Match Text" Width="100" DisplayMemberBinding="{Binding MatchText}"/>
                                <GridViewColumn Header="Filter Type" Width="100" DisplayMemberBinding="{Binding FilterType}"/>
                                <GridViewColumn Header="Keywords" Width="100" DisplayMemberBinding="{Binding Keywords}"/>
                                <GridViewColumn Header="Trace Level" Width="150" DisplayMemberBinding="{Binding TraceLevel}"/>
                                <GridViewColumn Header="Trace Flags" Width="300" DisplayMemberBinding="{Binding TraceFlags}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Events">
                <Grid Background="{DynamicResource SecondaryBackgroundBrush}" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" 
                              x:Name="EventsDataGrid"
                              AutoGenerateColumns="True"
                              AutoGeneratingColumn="EventsDataGrid_AutoGeneratingColumn"
                              IsReadOnly="True"
                              SelectionMode="Extended"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              EnableRowVirtualization="True"
                              EnableColumnVirtualization="True"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              VirtualizingPanel.ScrollUnit="Pixel"
                              ScrollViewer.IsDeferredScrollingEnabled="True"
                              KeyDown="EventsDataGrid_KeyDown"
                              MouseDoubleClick="EventsDataGrid_MouseDoubleClick">
                    </DataGrid>

                    <Grid Grid.Row="1" Background="{DynamicResource SecondaryBackgroundBrush}" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" x:Name="EventCountText" 
                                   Text="Events: 0" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <Button Content="Start" 
                                    x:Name="StartStopButton"
                                    Click="StartTracing"
                                    Margin="5,0"
                                    MinWidth="100"/>
                            <Button Content="Clear" 
                                    Click="ClearEvents"
                                    Margin="5,0"
                                    MinWidth="100"/>
                            <Button Content="Export CSV..." 
                                    Click="ExportToCsv"
                                    Margin="5,0"
                                    MinWidth="100"/>
                            <Button Content="Copy" 
                                    Click="CopySelectedEvents"
                                    Margin="5,0"
                                    MinWidth="100"
                                    ToolTip="Copy selected rows (Ctrl+C)"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Settings">
                <Grid Background="{DynamicResource SecondaryBackgroundBrush}" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Dark Mode:" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="4"/>
                    <CheckBox Grid.Row="0" Grid.Column="1" IsChecked="{Binding IsDarkMode}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4" />
                    <Label Grid.Row="1" Grid.Column="0" Content="Show Timestamps in UTC:" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="4"/>
                    <CheckBox Grid.Row="1" Grid.Column="1" IsChecked="{Binding ShowTimestampsInUTC}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4" />
                    <Label Grid.Row="2" Grid.Column="0" Content="Max Events to Show:" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="4"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="4">
                        <Slider x:Name="MaxEventsSlider" 
                                Minimum="1000" 
                                Maximum="100000" 
                                Value="{Binding MaxEventsToShow}" 
                                VerticalAlignment="Center" 
                                Width="250"
                                TickFrequency="10000"
                                IsSnapToTickEnabled="False"
                                SmallChange="1000"
                                LargeChange="10000"/>
                        <TextBlock Text="{Binding Value, ElementName=MaxEventsSlider, StringFormat={}{0:N0}}" 
                                   VerticalAlignment="Center" 
                                   Margin="10,0,0,0"
                                   MinWidth="60"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="About">
                <Grid Background="{DynamicResource SecondaryBackgroundBrush}" Margin="10">
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="1" 
                Background="{DynamicResource TertiaryBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,1,0,0"
                Padding="10,5">
            <TextBlock x:Name="StatusTextBlock" Text="Ready" FontSize="12"/>
        </Border>
    </Grid>
</Window>
