<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BaseStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Dark Theme Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0E639C"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#1177BB"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#094771"/>
    <SolidColorBrush x:Key="SelectionBrush" Color="#264F78"/>
    <SolidColorBrush x:Key="SelectionInactiveBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>

</ResourceDictionary>